<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gregorywlodarek.torontotransit.torontotransit"
    android:versionCode="9"
    android:versionName="1.1.2" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_action_titlett"
        android:theme="@style/Theme.Custombar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoutePicker"
            android:label="@string/title_activity_route_picker"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DirectionPicker"
            android:label="@string/title_activity_direction_picker"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".StopPicker"
            android:label="@string/title_activity_stop_picker"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Result"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TTCAlertsResult"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TheTeam"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SubwayMap"
            android:label="" >
        </activity>
        <activity
            android:name=".TTCAlerts"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Instructions"
            android:label="" >
        </activity>
    </application>

</manifest>
