<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pageIndicator0"
            android:layout_width="@dimen/scroll_indicator_size"
            android:padding="3dp"
            android:src="@drawable/page_indicator"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/scroll_indicator_size" />
        <ImageView
            android:id="@+id/pageIndicator1"
            android:layout_width="@dimen/scroll_indicator_size"
            android:padding="3dp"
            android:src="@drawable/page_indicator"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/scroll_indicator_size" />
        <ImageView
            android:id="@+id/pageIndicator2"
            android:layout_width="@dimen/scroll_indicator_size"
            android:padding="3dp"
            android:src="@drawable/page_indicator"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/scroll_indicator_size" />
        <ImageView
            android:id="@+id/pageIndicator3"
            android:layout_width="@dimen/scroll_indicator_size"
            android:padding="3dp"
            android:src="@drawable/page_indicator"
            android:scaleType="fitCenter"
            android:layout_height="@dimen/scroll_indicator_size" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">


        <Button
            android:id="@+id/signInButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:text="Get Started"
            android:background="@color/gilt_orange"
            android:textStyle="bold"
            android:textSize="18dp"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</LinearLayout>


